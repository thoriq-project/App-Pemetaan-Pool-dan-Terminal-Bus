<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add.AddPoolActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_pool"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:title="Add Pool"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/toolbar_add_pool"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:elevation="7dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kecamatan :"
            android:textSize="16sp"
            android:paddingLeft="23dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/txt_nama_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="null"
            android:textSize="16sp"
            android:paddingLeft="6dp"
            android:gravity="center_vertical"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="5dp">

        <ImageView
            android:id="@+id/img_add_pool"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/biruputih"
            android:scaleType="centerCrop"
            />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/txt_add_nama_pool"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nama Pool"
            android:layout_marginHorizontal="20dp"
            android:background="@color/biruputih"
            android:paddingHorizontal="10dp"
            android:elevation="5dp"
            android:inputType="textCapWords"
            />

        <EditText
            android:id="@+id/txt_add_notelp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="No Telp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/biruputih"
            android:paddingHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/txt_add_harga_tiket"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/biruputih"
            android:elevation="5dp"
            android:hint="Harga Tiket"
            android:inputType="text"
            android:paddingHorizontal="10dp" />

        <EditText
            android:id="@+id/txt_add_lat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Latitude"
            android:layout_marginHorizontal="20dp"
            android:background="@color/biruputih"
            android:paddingHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/txt_add_long"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Longitude"
            android:layout_marginHorizontal="20dp"
            android:background="@color/biruputih"
            android:paddingHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/txt_add_alamat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/biruputih"
            android:elevation="5dp"
            android:hint="Alamat"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:maxLines="4"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:textAlignment="gravity"
            android:gravity="top"/>

        <EditText
            android:id="@+id/txt_add_tujuan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/biruputih"
            android:elevation="5dp"
            android:hint="Tujuan"
            android:inputType="textMultiLine"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:textAlignment="gravity"
            android:gravity="top"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>


    </LinearLayout>

</ScrollView>

</LinearLayout>